<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D6D8E6"
    tools:context=".ProfileActivity">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_IMG_profile"
        android:layout_width="218dp"
        android:layout_height="208dp"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/transparent"
        android:contentDescription="Profile_picture"
        android:scaleType="centerCrop"
        android:src="@drawable/avatar"
        app:civ_border_width="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.116" />

    <ImageButton
        android:id="@+id/btnSelectIMG_Profile"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/add_icon"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/user_IMG_profile"
        app:layout_constraintEnd_toEndOf="@+id/user_IMG_profile"
        app:layout_constraintHorizontal_bias="0.932"
        app:layout_constraintStart_toStartOf="@+id/user_IMG_profile" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/upper_corner_drawable"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:paddingRight="20dp"
            android:text="Name : "
            android:textColor="@color/black"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/etUSerName_Profile"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:drawablePadding="20dp"
            android:drawableTint="@color/black"
            android:paddingRight="20dp"
            android:text="User Name"
            android:textColor="@color/black"
            android:textSize="26dp" />
        <TextView
            android:id="@+id/txt43"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:paddingRight="20dp"
            android:text="Bio : "
            android:textColor="@color/black"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/etUserBio_Profile"
            android:layout_width="304dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:drawableLeft="@drawable/ic_baseline_border_color_24"
            android:drawablePadding="20dp"
            android:drawableTint="@color/black"
            android:maxHeight="90dp"
            android:maxLines="3"
            android:textAlignment="viewStart"
            android:paddingRight="20dp"
            android:text="Bio"
            android:layout_marginBottom="80dp"
            android:textColor="@color/black"
            android:textSize="26dp" />
        <androidx.cardview.widget.CardView
            android:layout_width="290dp"
            app:cardCornerRadius="20dp"
            android:layout_height="60dp"
            android:backgroundTint="#34B118"
            android:layout_gravity="center_horizontal"
            >
            <Button
                android:id="@+id/btnSave_Profile"
                android:layout_width="290dp"
                android:layout_height="66dp"
                android:text="Save"
                android:textSize="30dp"
                android:backgroundTint="#34B118"
                />
        </androidx.cardview.widget.CardView>



    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>